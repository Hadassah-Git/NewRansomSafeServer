import java.io.BufferedReader;
import java.io.DataInput;
import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;

import javax.xml.bind.Marshaller.Listener;


//תקשורת בין שרת המכונות הוירטואליות לפרוקסי
public class ServerToProxy{

	ServerSocket serverSocket;
	Socket sockProxy;
	String host,vmIp;
	int port,vmPort;



	public ServerToProxy(String host, int port) throws IOException {
		super();
		this.host = host;
		this.port = port;
		Communication();
	}
	
	public void Communication() throws IOException {
		
		serverSocket=new ServerSocket(port);
		while(true)
		{
		sockProxy= serverSocket.accept();
		
	
		Thread thread = new Thread(new RequestHandlerVM(vmIp, sockProxy));
		//Thread thread = new Thread(new RequestHandlerVM(vmIp));
		thread.start();
		}
	}
	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		try {
			new ServerToProxy("127.0.0.1",8086);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
}

