import java.io.BufferedReader;
import java.io.DataInput;
import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;

import javax.xml.bind.Marshaller.Listener;


//תקשורת בין שרת המכונות הוירטואליות לפרוקסי
public class ServerToProxy extends Thread{

	DistributionVMManager dvm=new DistributionVMManager();
	ServerSocket serverSocket;
	Socket sockProxy;
	String host,vmIP;
	int port,vnPort;


	public ServerToProxy(String host, int port) throws IOException {
		super();
		this.host = host;
		this.port = port;
	}
	
	public void Communication() {
		serverSocket=new ServerSocket(port);
		sockProxy= serverSocket.accept();
		
		Thread thread = new Thread(){
			
				public void run() {
					DataInputStream proxyIn=new DataInputStream(sockProxy.getInputStream());
					vmIP=dvm.getFreeVM();
					Socket sockVM=new Socket(vmIP,8087);
					DataOutputStream VMOut=new DataOutputStream(sockProxy.getOutputStream());
					
					
				}
			
			
			
		
	}
}
